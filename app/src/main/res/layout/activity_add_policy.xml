<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Policy">

    <TextView
        android:id="@+id/add_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Add Policy"
        android:textColor="@color/fullblue"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/AgentC_add"
        android:layout_width="match_parent"
        android:layout_below="@id/add_policy"
        android:drawableStart="@drawable/agent_code"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:hint="Agent Code"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="45dp"
        android:background="@drawable/edittext_g"
        />

    <EditText
        android:id="@+id/Policy_number"
        android:layout_width="match_parent"
        android:layout_below="@id/AgentC_add"
        android:drawableStart="@drawable/policy_number"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:hint="Policy Number"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="45dp"
        android:background="@drawable/edittext_g"
        />

    <EditText
        android:id="@+id/Family_Name"
        android:layout_width="match_parent"
        android:layout_below="@id/Policy_number"
        android:drawableStart="@drawable/family_name"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:hint="Family Name"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="45dp"
        android:background="@drawable/edittext_g"
        />

    <EditText
        android:id="@+id/Policy_Holder"
        android:layout_width="match_parent"
        android:layout_below="@id/Family_Name"
        android:drawableStart="@drawable/person"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:hint="Policy Holder Name"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="45dp"
        android:background="@drawable/edittext_g"
        />

    <EditText
        android:id="@+id/DOB_date"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@id/Policy_Holder"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_g"
        android:drawableStart="@drawable/date"
        android:drawablePadding="10dp"
        android:hint="Date Of Birth"
        android:paddingStart="10dp" />

    <EditText
        android:id="@+id/Mobile_numadd"
        android:layout_width="match_parent"
        android:layout_below="@id/DOB_date"
        android:drawableStart="@drawable/call"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:hint="Mobile Number"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="45dp"
        android:background="@drawable/edittext_g"
        />

    <LinearLayout
        android:id="@+id/tino"
        android:layout_below="@+id/Mobile_numadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="3"
            android:drawableStart="@drawable/threes"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/edittext_g"
            android:hint="Plan"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="3"
            android:drawableStart="@drawable/threes"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/edittext_g"
            android:hint="Term"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="3"
            android:drawableStart="@drawable/threes"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/edittext_g"
            android:hint="PPT"/>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/tino"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:hint="@string/select"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        
        <AutoCompleteTextView
            android:id="@+id/autoComplete_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>


    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>