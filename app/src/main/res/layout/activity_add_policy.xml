<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/allfragment"
    android:orientation="vertical"
    tools:context=".Add_Policy">

    <TextView
        android:id="@+id/add_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Add Policy"
        android:textColor="@color/fullblue"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:scrollbars="none"
            android:background="@drawable/navigation_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/AgentC_add"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_g"
                    android:drawableStart="@drawable/agent_code"
                    android:drawablePadding="10dp"
                    android:hint="Agent Code"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/Policy_number"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_g"
                    android:drawableStart="@drawable/policy_number"
                    android:drawablePadding="10dp"
                    android:hint="Policy Number"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/Family_Name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_g"
                    android:drawableStart="@drawable/family_name"
                    android:drawablePadding="10dp"
                    android:hint="Family Name"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/Policy_Holder"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_g"
                    android:drawableStart="@drawable/person"
                    android:drawablePadding="10dp"
                    android:hint="Policy Holder Name"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/DOB_date"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_g"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableStart="@drawable/date"
                    android:drawablePadding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Date Of Birth"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/Mobile_numadd"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_g"
                    android:drawableStart="@drawable/call"
                    android:drawablePadding="10dp"
                    android:hint="Mobile Number"
                    android:paddingStart="10dp" />

                <LinearLayout
                    android:id="@+id/trio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="3"
                        android:background="@drawable/edittext_g"
                        android:drawableStart="@drawable/threes"
                        android:drawablePadding="10dp"
                        android:hint="Plan"
                        android:paddingStart="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="3"
                        android:background="@drawable/edittext_g"
                        android:drawableStart="@drawable/threes"
                        android:drawablePadding="10dp"
                        android:hint="Term"
                        android:paddingStart="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="3"
                        android:background="@drawable/edittext_g"
                        android:drawableStart="@drawable/threes"
                        android:drawablePadding="10dp"
                        android:hint="PPT"
                        android:paddingStart="10dp" />

                </LinearLayout>

                <!--    <com.google.android.material.textfield.TextInputLayout-->
                <!--        android:layout_width="match_parent"-->
                <!--        android:layout_height="45dp"-->
                <!--        android:layout_below="@id/tino"-->
                <!--        android:layout_marginTop="10dp"-->
                <!--        android:layout_marginHorizontal="20dp"-->
                <!--        android:hint="@string/select"-->
                <!--        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">-->

                <!--        <AutoCompleteTextView-->
                <!--            android:id="@+id/autoComplete_txt"-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:inputType="none"/>-->

                <!--    </com.google.android.material.textfield.TextInputLayout>-->

                <EditText
                    android:id="@+id/sel_mode"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_g"
                    android:drawableStart="@drawable/mode"
                    android:drawablePadding="10dp"
                    android:hint="Select mode"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/Sum_assure"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_g"
                    android:drawableStart="@drawable/sum_assured"
                    android:drawablePadding="10dp"
                    android:hint="Sum Assured"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/fup_date"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_g"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableStart="@drawable/date"
                    android:drawablePadding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Fup Date"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/Maturity_Date"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_g"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableStart="@drawable/date"
                    android:drawablePadding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Maturity Date"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/Nominee_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_g"
                    android:drawableStart="@drawable/person"
                    android:drawablePadding="10dp"
                    android:hint="Nominee Name"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_g"
                    android:drawableStart="@drawable/address"
                    android:drawablePadding="10dp"
                    android:hint="Address"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/remark"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_g"
                    android:drawableStart="@drawable/remark"
                    android:drawablePadding="10dp"
                    android:hint="Remark"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/file1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_g"
                    android:drawableStart="@drawable/file"
                    android:drawablePadding="10dp"
                    android:hint="File 1"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/file2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_g"
                    android:drawableStart="@drawable/file"
                    android:drawablePadding="10dp"
                    android:hint="File 2"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/file3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_g"
                    android:drawableStart="@drawable/file"
                    android:drawablePadding="10dp"
                    android:hint="File 3"
                    android:paddingStart="10dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="60dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_bg"
                    android:text="Submit"
                    android:textColor="@color/white"/>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>