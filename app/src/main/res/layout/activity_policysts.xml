<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/allfragment"
    tools:context=".policysts">

    <TextView
        android:id="@+id/head_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Offline Policy Status"
        android:textColor="@color/fullblue"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/navigation_bg"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/head_text">

        <EditText
            android:id="@+id/Policy_number"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/policy_number"
            android:drawablePadding="8dp"
            android:paddingStart="10dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_g"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:hint="Policy Number"/>

        <Button
            android:id="@+id/step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Policy_number"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg"
            android:text="Submit"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_below="@id/step1">

            <TableRow>
                
            </TableRow>

        </TableLayout>


    </RelativeLayout>


</RelativeLayout>