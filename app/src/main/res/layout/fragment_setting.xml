        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/profile1" />

        <TextView
            android:id="@+id/namepro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Manthan Sawant"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numberpro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
            android:text="8879302171"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/switchbutton"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="@color/semiblue"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            android:layout_below="@+id/numberpro">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/View_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="2.55dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/setbutton_bg"
                    android:text="View Profile"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/Edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginStart="2.5dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/setbutton_bg"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"
                    android:text="Edit Profile"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

